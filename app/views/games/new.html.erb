<div class="container m-5">
  <h1>New Game</h1>

  <div class="d-flex flex-wrap gap-2">
    <% @letters.each do |letter| %>
      <div class="d-flex justify-content-center align-items-center bg-primary text-white" style="width: 50px; height: 50px; font-size: 20px; border-radius: 5px;">
        <%= letter %>
      </div>
    <% end %>
  </div>

  <form action="/score" method="post" class="mt-4" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
    <div class="form-group">
      <label for="word" class="form-label">What is the longest word you can find?</label>
      <div class="input-group">
        <input type="text" class="form-control" id="word" name="word" placeholder="Enter your word">
        <div class="input-group-append">
        <input type="submit" name="" id="" class="btn btn-primary">
        </div>
      </div>
    </div>
  </form>
</div>
